package com.algaworks.listas;

import java.util.ArrayList;
import java.util.List;

public class Exemplo01 {
	public static void main(String [] args) {
		List<String>nomes = new ArrayList<>();
		
		nomes.add("João");
		nomes.add("Francisco");
		nomes.add("Simone");
		
		System.out.println(nomes);
		
		nomes.remove(2);
		
		System.out.println(nomes);
		
		nomes.remove("João");
		
		System.out.println(nomes);
	}
}
